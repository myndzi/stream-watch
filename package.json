{
  "name": "stream-watch",
  "author": "Kris Reeves",
  "license": "MIT",
  "version": "0.1.0-pre.1",
  "description": "Track the online status of a stream and configure when and how to act on changes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myndzi/stream-watch.git"
  },
  "keywords": [
    "typescript",
    "twitch",
    "stream",
    "pubsub",
    "eventsub",
    "polling",
    "watch"
  ],
  "bugs": {
    "url": "https://github.com/myndzi/stream-watch/issues"
  },
  "homepage": "https://github.com/myndzi/stream-watch#readme",
  "scripts": {
    "test": "jest",
    "clean": "rm -rf ./dist/*",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run gen-readme && grep -v \"exit 1\" package.json > ./dist/package.json",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "gen-readme": "partialtongue -i docs/README.md -o dist/README.md --start '//*' --end '*//'$'\\n' && cp dist/README.md ./README.md",
    "prepack": "printf '%s\\n\\n' 'use npm run release' && exit 1",
    "release": "npm run build && ./test-esm-cjs && (cd dist && npm publish)"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    "./cjs": {
      "require": "./cjs/index.js"
    },
    "./cjs/*": {
      "require": "./cjs/*"
    },
    "./cjs/policy/*": {
      "require": "./cjs/policy/*"
    },
    ".": {
      "import": "./index.js"
    },
    "./*": {
      "import": "./*"
    },
    "./policy/*": {
      "import": "./policy/*"
    }
  },
  "devDependencies": {
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "@twurple/eventsub-ws": "^7.2.1",
    "@types/jest": "^29.5.14",
    "jest": "^30.0.0-alpha.6",
    "partialtongue": "^1.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
